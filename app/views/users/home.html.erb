<% if user_signed_in? %>
  <div class="container">
    <button type="button" class="btn btn-info btn-md" data-toggle="modal" data-target="#chatroom_modal">Create Chatroom</button>
    <%= render partial: 'chatrooms/form' %>  
  </div>
<% end %>

<% if @chatrooms.present? %>
  <h2>Chatrooms:</h2>
  <ul>
    <% @chatrooms.each do |chatroom| %>
      <li><h4><%= link_to chatroom.topic, chatroom_path(chatroom)%></h4></li> 
    <% end %>
  </ul>
<% end %>